<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/include_toolbar" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                app:cardCornerRadius="20dip">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@id/content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title"
                        android:layout_toRightOf="@+id/content_img"
                        android:gravity="center"
                        android:text="标题"
                        android:textColor="@color/text_primary_light"
                        android:textSize="20dip" />

                    <ImageView
                        android:id="@+id/content_img"
                        android:layout_width="180dip"
                        android:layout_height="250dip"
                        android:layout_marginBottom="20dip"
                        android:layout_marginTop="5dip"
                        android:src="@mipmap/icon" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/content_title"
                        android:layout_toRightOf="@+id/content_img">

                        <TextView
                            android:id="@+id/state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dip"
                            android:layout_marginTop="5dip"
                            android:text="状态"
                            android:textColor="@color/list_divider_dark"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/content_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dip"
                            android:layout_toRightOf="@+id/state"
                            android:text="状态111"
                            android:textColor="@color/content_black"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/volumn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content_state"
                            android:layout_marginLeft="30dip"
                            android:layout_marginTop="5dip"
                            android:text="点击量"
                            android:textColor="@color/list_divider_dark"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/click_volumn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content_state"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dip"
                            android:layout_toRightOf="@+id/volumn"
                            android:text="点击量111"
                            android:textColor="@color/content_black"
                            android:textSize="15dip" />

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/click_volumn"
                            android:layout_marginLeft="15dip"
                            android:layout_marginTop="5dip"
                            android:text="动漫类型"
                            android:textColor="@color/list_divider_dark"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/content_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/click_volumn"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dip"
                            android:layout_toRightOf="@+id/type"
                            android:text="动漫类型111"
                            android:textColor="@color/content_black"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/zone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content_type"
                            android:layout_marginLeft="48dip"
                            android:layout_marginTop="5dip"
                            android:text="地区"
                            android:textColor="@color/list_divider_dark"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/content_zone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content_type"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dip"
                            android:layout_toRightOf="@+id/zone"
                            android:text="地区111"
                            android:textColor="@color/content_black"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/zone"
                            android:layout_marginLeft="15dip"
                            android:layout_marginTop="5dip"
                            android:text="动漫语言"
                            android:textColor="@color/list_divider_dark"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/content_language"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content_zone"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dip"
                            android:layout_toRightOf="@+id/language"
                            android:text="动漫语言111"
                            android:textColor="@color/content_black"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/language"
                            android:layout_marginLeft="15dip"
                            android:layout_marginTop="5dip"
                            android:text="动漫年份"
                            android:textColor="@color/list_divider_dark"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/content_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content_language"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dip"
                            android:layout_toRightOf="@+id/year"
                            android:text="动漫年份111"
                            android:textColor="@color/content_black"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/last_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/year"
                            android:layout_marginLeft="15dip"
                            android:layout_marginTop="5dip"
                            android:text="最后更新"
                            android:textColor="@color/list_divider_dark"
                            android:textSize="17dip" />

                        <TextView
                            android:id="@+id/content_last_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content_year"
                            android:layout_marginBottom="20dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dip"
                            android:layout_toRightOf="@+id/last_update"
                            android:text="2016-08-26"
                            android:textColor="@color/content_black"
                            android:textSize="17dip" />
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                app:cardCornerRadius="20dip">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="110dip"
                        android:layout_height="40dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:background="@color/red"
                        android:gravity="center"
                        android:text="动漫下载"
                        android:textColor="@color/white" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/recent_update_tabs"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="10dip"
                        android:background="@color/colorAccent" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/recent_update_vp"
                        android:layout_marginTop="10dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                app:cardCornerRadius="20dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="110dip"
                        android:layout_height="40dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:background="@color/red"
                        android:gravity="center"
                        android:text="编辑推荐"
                        android:textColor="@color/white" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recommand_recyler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                app:cardCornerRadius="20dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/intro_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="5dip"
                    />
                    <WebView
                        android:id="@+id/detail_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="10dip" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>